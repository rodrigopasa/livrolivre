# Configuração da aplicação
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
SESSION_SECRET=your-secret-here
# Definir como false se não estiver usando SSL no domínio
COOKIE_SECURE=false

# Configuração do banco de dados PostgreSQL
DATABASE_URL=postgresql://usuario:senha@host:porta/nome_banco
# Variáveis individuais para configuração do PostgreSQL (usadas pelo Coolify)
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=sua-senha-segura
PGDATABASE=elexandria
PGPORT=5432

# Configurações de upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=50000000

# Configurações de diretórios de armazenamento
BOOKS_DIR=/app/public/books
COVERS_DIR=/app/public/covers
